<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".LoginActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20px"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/login_TXT_instructions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="@string/instructions"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:id="@+id/login_TXT_instruction_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/instruction_1"/>
            <TextView
                android:id="@+id/login_TXT_instruction_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/instruction_2"/>
            <TextView
                android:id="@+id/login_TXT_instruction_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/instruction_3"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_TXT_brightness_value_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_LAYOUT_temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30px"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/login_LAYOUT_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/login_LAYOUT_login">
        <TextView
            android:id="@+id/login_TXT_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature_guess"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/login_EDT_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50px"
            android:maxWidth="250px"
            android:textSize="20sp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:hint="0" />
        <TextView
            android:id="@+id/login_TXT_celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/celsius"
            android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/login_LAYOUT_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginVertical="3px"
        android:layout_marginHorizontal="40px"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_EDT_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="@string/username"/>
        <EditText
            android:id="@+id/login_EDT_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:hint="@string/password"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_BTN_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_LAYOUT_login"
        android:text="@string/login"/>

    <TextView
        android:id="@+id/login_TXT_login_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_BTN_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textSize="40sp"/>


</RelativeLayout>